{
  "name": "api",
  "version": "0.0.0",
  "type": "module",
  "private": true,
  "scripts": {
    "start": "node dist/index.cjs",
    "dev": "tsdown --watch --onSuccess \"node dist/index.cjs\"",
    "build": "tsdown",
    "check-types": "tsc --noEmit",
    "lint": "eslint src/ --max-warnings 0",
    "test": "jest --detectOpenHandles"
  },
  "jest": {
    "preset": "@repo/jest-presets/node",
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  },
  "dependencies": {
    "arbre": "*",
    "@fastify/cors": "^10.0.0",
    "@fastify/sensible": "^6.0.0",
    "fastify": "^5.0.0",
    "fastify-plugin": "^5.0.0",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@jest/globals": "^30.2.0",
    "@repo/eslint-config": "*",
    "@repo/jest-presets": "*",
    "@repo/typescript-config": "*",
    "@types/node": "^22.15.3",
    "eslint": "^9.39.0",
    "jest": "^30.2.0",
    "tsdown": "^0.20.3",
    "typescript": "5.9.3"
  }
}
